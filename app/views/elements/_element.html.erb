
<div id="<%= element.id %>" class="element card modular <%= element.font %> <%= element.width %>">
  <i class="material-icons delete">remove_circle</i>
  <i class="material-icons done">check_circle</i>

  <% if element.image.file? %>
    <div class="card-image">
      <div class="title"><%= element.title %></div>
      <%= image_tag element.image.url, class: "materialboxed" %>
    <% if element.element_link.empty?%>
    <% else %>
      <%= link_to element.element_link, :target => "_blank", class: 'right' do %>
       <i class="material-icons">link</i><a href="<%=element.element_link%>" target="_blank"></a>
      <% end %>
    <% end %>
      <div class="description"><%= element.description %></div>
    </div>

  <%elsif element.document.file? %>
     <div class="card-image"><%= link_to element.document.url do %>
        <%= image_tag ("documentlogo.png") %>
      <% end %>
      <% if element.element_link.empty?%>
      <% else %>
      <%= link_to element.element_link, :target => "_blank", class: 'right' do %>
        <i class="material-icons">link</i>
        <a href="<%=element.element_link%>" target="_blank"></a>
      <% end %>
      <% end %>
      <div class="title"><%= element.title %></div>
      <div class="description"><%= element.description %></div>
      </div>

  <%elsif element.audio.file? %>
     <div class="card-image"><%= link_to element.audio.url do %>
        <%= image_tag ("musiclogo.png") %>
      <% end %>

      <% if element.element_link.empty?%>
      <% else %>
      <%= link_to element.element_link, :target => "_blank", class: 'right' do %>
        <i class="material-icons">link</i>
        <a href="<%=element.element_link%>" target="_blank"></a>
      <% end %>
      <% end %>
      <div class="title"><%= element.title %></div>
      <div class="description"><%= element.description %></div>
    </div>

  <% elsif element.element_link.empty? && !element.image? && !element.document? && !element.audio?  %>
      <div class="card-image">
        <%#= image_tag ("pencil.png") %>
        <div class="title"><%= element.title %></div>
        <div class="description"><%= element.description %></div>
      </div>

  <% else %>
    <div class="card-image">
      <%#=# link_to element.element_link do %>
        <%= image_tag ("internet-globe.jpg") %>
      <%# end %>
      <% if element.element_link.empty?%>
      <% else %>
          <%= link_to element.element_link, :target => "_blank", class: 'right' do %>
            <i class="material-icons">link</i>
            <a href="<%=element.element_link%>" target="_blank"></a>
          <% end %>
    <% end %>
        <div class="title"><%= element.title %></div>
        <div class="description"><%= element.description %></div>
    </div>
  <% end %>
</div>
