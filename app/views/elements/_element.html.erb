<div id=<%= element.id %> class="element card modular <%= element.font %> <%= element.width %>">
  <i class="material-icons delete">close</i>
  <i class="material-icons done">done</i>
​
  <% if element.image.file? %>
    <div class="card-image">
      <%= image_tag element.image.url, class: "materialboxed" %>
    </div>
    <% if element.element_link.empty?%>
    <% else %>
      <%= link_to element.element_link, class: 'right', :target => '_blank' do %>
         <i class="material-icons">link</i>
         <a href="<%=element.element_link%>"></a>
       <% end %>
    <% end %>
​
    <% if element.title %>
      <div class="title"><%= element.title %></div>
    <% end %>
​
    <% if element.description %>
      <div class="description"><%= element.description %></div>
    <% end %>
  <% end %>

  <%if element.document.file? %>
    <div class="card-image">
      <%= link_to element.document.url, :target => '_blank' do %>
        <%= image_tag ("documentlogo.png") %>
      <% end %>
    </div>
    <% if element.element_link.empty?%>
    <% else %>
      <%= link_to element.element_link, class: 'right', :target => '_blank' do %>
        <i class="material-icons">link</i>
        <a href="<%=element.element_link%>"></a>
      <% end %>
    <% end %>
​
    <% if element.title %>
      <div class="title"><%= element.title %></div>
    <% end %>
​
    <% if element.description %>
      <div class="description"><%= element.description %></div>
    <% end %>
​
  <% end %>
​
  <% if element.audio.file? %>
    <div class="card-image">
      <%= link_to element.audio.url, :target => '_blank' do %>
        <%= image_tag ("musiclogo.png") %>
      <% end %>
    </div>
    <% if element.element_link.empty?%>
    <% else %>
      <%= link_to element.element_link, class: 'right', :target => '_blank' do %>
        <i class="material-icons">link</i>
        <a href="<%=element.element_link%>"></a>
      <% end %>
    <% end %>
    <% if element.title %>
      <div class="title"><%= element.title %></div>
    <% end %>
​
    <% if element.description %>
      <div class="description"><%= element.description %></div>
    <% end %>
  <% end %>
​
  <!-- Just a note -->
  <% if element.element_link.empty? && !element.image? && !element.document? && !element.audio?  %>
    <div class="card-image">
    </div>
    <% if element.title %>
      <div class="title"><%= element.title %></div>
    <% end %>
​
    <% if element.description %>
      <div class="description"><%= element.description %></div>
    <% end %>
  <% end %>
​
  <!-- Link -->
  <% if !element.image? && !element.document? && !element.audio? && element.element_link.present?%>
    <div class="card-image">
    <%#=# link_to element.element_link, :target => '_blank' do %>
      <%= image_tag ("internet-globe.jpg") %>
    <%# end %>
    </div>
    <% if element.element_link.empty?%>
    <% else %>
      <%= link_to element.element_link, :target => "_blank", class: 'right' do %>
        <i class="material-icons">link</i>
        <a href="<%=element.element_link%>"></a>
      <% end %>
    <% end %>
​
    <% if element.title %>
      <div class="title"><%= element.title %></div>
    <% end %>
​
    <% if element.description %>
      <div class="description"><%= element.description %></div>
    <% end %>
  <% end %>
</div>