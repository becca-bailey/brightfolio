<div class="folio">

  <div class="container clearfix">
  <% #TODO: Title alsways shows up as title of first folio %>
    <h1 class="header"><%= @folio.title %></h1>
    <script>REGISTRY = { folio_id: "<%= @folio.id %>" } </script>
    <p id="notice"><%= notice %></p>
    <button id="add-element" type="button" class="waves-effect waves-light btn right clearfix">Toggle Controls</button>

    <i id="packery-toggle" class="material-icons">view_quilt</i>
    <div class="row">
      <div class="col s12 m9 elements" id="container">
        <% if @elements %>
          <% @elements.each do |element| %>
            <%= render "elements/element", element: element %>
          <% end %>
        <% end %>
      </div>

      <div class="col s12 m3" id="sidebar">
        <%= render "elements/form"  %>
        <button id='delete'>Delete Element</button>
      </div>
    </div>
  </div>
</div>
