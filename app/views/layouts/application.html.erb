<!DOCTYPE html>
<html>
<head>
  <title>Brightfolio</title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <div class="welcome">
    Hello, <strong><%= current_user.first_name %></strong>!
    <%= link_to "Sign out", logout_path, method: "delete", class: "right" %>
  <% end %>
</div> 

<header>
    <nav class="menu teal" role="navigation">
    <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to 'Dashboard', folios_path %></li>
      <li class="divider"></li>
      <% if current_user %>
        
      <% else %>
        <li><%= link_to "Login", login_path, id: "login" %></li>
        <li><%= link_to "Sign in with Pinterest", "/auth/pinterest", id: "sign_in" %></li>
        <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
      <% end %>
    </ul>
    <nav>
      <div class="nav-wrapper">
      <%= link_to image_tag("logo.png"), {action: :'index', :controller => 'home'}, {:class => 'responsive-logo'} %>
        <ul class="right">
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1" data-constrainwidth="false"><i class="material-icons">list</i></a></li>
        </ul>
      </div>
    </nav>
  </header> 



<%= yield %>

</body>
</html>
